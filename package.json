{
  "name": "tower-api",
  "version": "1.0.0",
  "description": "API's for managing the configuration of metadata, beacons, data-sources and other entities of Litehouze",
  "main": "index.js",
  "scripts": {
    "prettier:check": "prettier --check \"./src/**/*.ts\"",
    "prettier:write": "prettier --write \"./src/**/*.ts\"",
    "apidocs": "browser-sync start --server \"api-docs\" --files=\"api-docs\"",
    "apidocs:validate": "npx swagger-cli validate api-docs/content/openapi.yaml",
    "apidocs:bundle": "npx swagger-cli bundle api-docs/content/openapi.yaml --outfile api-docs/lp-api-bundle.yaml --type yaml",
    "dev": "cross-env NODE_ENV=development ENVIRONMENT=development nodemon -r dotenv/config ./dist/index.js",
    "debug": "cross-env NODE_ENV=development ENVIRONMENT=development nodemon -r dotenv/config --inspect ./dist/index.js",
    "test": "mocha -r ts-node/register 'test/**/*.spec.ts' --no-timeouts --grep $npm_config_tags --no-timeouts --exit || true ",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@ssh.dev.azure.com:v3/falqon/litehouze/tower-api"
  },
  "keywords": [],
  "author": "sharath@skiploop.com",
  "contributors": [
    "sharath@skiploop.com",
    "rubin@skiploop.com"
  ],
  "license": "ISC",
  "dependencies": {
    "body-parser": "1.20.0",
    "cors": "2.8.5",
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "express-boom": "3.0.0",
    "express-device": "0.4.2",
    "express-joi-validation": "5.0.1",
    "express-jwt": "7.7.5",
    "express-mung": "0.5.1",
    "express-unless": "2.1.0",
    "express-winston": "4.2.0",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.21",
    "moment": "2.29.3",
    "passport": "0.6.0",
    "passport-local": "1.0.0",
    "winston": "3.7.2",
    "winston-daily-rotate-file": "4.7.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.1.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.38",
    "browser-sync": "^2.27.10",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "del": "^6.1.1",
    "gulp": "^4.0.2",
    "gulp-git": "^2.10.1",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "mocha": "^10.0.0",
    "mocha-each": "^2.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  }
}
